[Unit]
Description=piface-worker PiFace worker daemon

[Service]
Restart=always
StartLimitInterval=20
StartLimitBurst=5
TimeoutStartSec=0
Environment="HOME=/root" "PATH=<%= @install_path %>/bin" "VIRTUAL_ENV=<%= @install_path %>"
EnvironmentFile=/etc/default/piface-worker
ExecStart=<%= @install_path %>/bin/piface-worker "$PIFACE_WORKER_OPTS"
